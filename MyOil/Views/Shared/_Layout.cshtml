<!DOCTYPE html>
<html >
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#nav_detail").unbind('click').click(function () {
                if ($("#detail_sub").hasClass("hidden")) {
                    $("#detail_sub").slideToggle(150);
                    $("#detail_sub").removeClass("hidden");
                    $("#detail_sub").addClass("shown");
                } else {
                    $("#detail_sub").removeClass("shown");
                    $("#detail_sub").addClass("hidden");
                    $("#detail_sub").slideUp(150);
                }
            })
        })

    </script>
</head>
<body>
<div id="header">
    <div id="logo"></div>
    <div id="logindisplay">
         @Html.Partial("_LogOnPartial")
    </div>
    <div id="background">
        <h1>Welcome to your Gasoline Management!</h1>      
    </div>
</div>
<div id="main_content" style="position:relative">
<div id="side_nav">
    <div id="nav_detail" class="sidemenu">
        <div id="img_detail"></div>
        <span>统计详情</span>
    </div>
    <div id="detail_sub" class="hidden">
    <div id="hidden_1" class="sidemenu hidden_menu">按时间统计</div>
    <div id="hidden_2" class="sidemenu hidden_menu">按地点统计</div>
    </div>
    <div id="nav_price" class="sidemenu">
        <div id="img_price"></div>
        <span>油价</span>
    </div>
    <div id="nav_station" class="sidemenu">
        <div id="img_station"></div>
        <span>加油站</span>
    </div>
    <div id="nav_system" class="sidemenu">
        <div id="img_system"></div>
        <span>系统管理</span>
    </div>   
</div>
<!--
<div id="siderm">
    @{Html.RenderAction("Sider", "Home");}
</div>
-->
<div id="main">
    @RenderBody()
</div>
</div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
